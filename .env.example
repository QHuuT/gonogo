# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./gonogo.db
# For production: postgresql://user:password@localhost:5432/gonogo

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GDPR Compliance
DATA_RETENTION_DAYS=1095  # 3 years default
ANONYMIZE_IPS_AFTER_DAYS=30
REQUIRE_CONSENT=true

# Application
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=quality/monitoring/app.log

# Content
BLOG_TITLE="GoNoGo Blog"
BLOG_DESCRIPTION="A GDPR-compliant blog with comments"
POSTS_PER_PAGE=10

# Email (for comment notifications, optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@yourdomain.com